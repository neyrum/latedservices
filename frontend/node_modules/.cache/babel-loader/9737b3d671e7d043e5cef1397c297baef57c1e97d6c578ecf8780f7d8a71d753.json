{"ast":null,"code":"import Navbar from \"@/components/Navbar.vue\";\nimport Sidebar from \"@/components/Sidebar.vue\";\nimport ManageServices from \"@/views/admin/ManageServices.vue\";\nimport DashboardHome from \"@/views/admin/DashboardHome.vue\";\nimport UsersManagement from \"@/views/admin/UsersManagement.vue\";\nexport default {\n  name: \"Dashboard\",\n  components: {\n    Navbar,\n    Sidebar,\n    ManageServices,\n    DashboardHome,\n    UsersManagement\n  },\n  data() {\n    return {\n      activeSection: \"overview\" // Por defecto se muestra el overview\n    };\n  },\n  methods: {\n    setActiveSection(section) {\n      this.activeSection = section;\n    }\n  }\n};","map":{"version":3,"names":["Navbar","Sidebar","ManageServices","DashboardHome","UsersManagement","name","components","data","activeSection","methods","setActiveSection","section"],"sources":["/home/lated/LatedServices/frontend/src/views/admin/Dashboard.vue"],"sourcesContent":["<template>\r\n  <div class=\"wrapper\">\r\n    <Navbar />\r\n    <!-- Escuchamos el evento \"section-change\" para actualizar activeSection -->\r\n    <Sidebar @section-change=\"setActiveSection\" />\r\n    <div class=\"content-wrapper\">\r\n      <div class=\"container-fluid mt-4\">\r\n        <!-- Se muestra el contenido según la sección activa -->\r\n        <DashboardHome v-if=\"activeSection === 'overview'\" />\r\n        \r\n        <template v-else-if=\"activeSection === 'manageServices'\">\r\n          <h2 class=\"dashboard-title\">Gestión de Servicios</h2>\r\n          <!-- Reutiliza el componente de Gestión de Servicios. Se puede pasar modo \"manage\" si fuera necesario -->\r\n          <ManageServices mode=\"manage\" />\r\n        </template>\r\n        \r\n        <template v-else-if=\"activeSection === 'usersManagement'\">\r\n          <h2 class=\"dashboard-title\">Gestión de Usuarios</h2>\r\n          <!-- Se asume que tienes un componente para la administración de usuarios -->\r\n          <UsersManagement />\r\n        </template>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Navbar from \"@/components/Navbar.vue\";\r\nimport Sidebar from \"@/components/Sidebar.vue\";\r\nimport ManageServices from \"@/views/admin/ManageServices.vue\";\r\nimport DashboardHome from \"@/views/admin/DashboardHome.vue\";\r\nimport UsersManagement from \"@/views/admin/UsersManagement.vue\";\r\n\r\nexport default {\r\n  name: \"Dashboard\",\r\n  components: {\r\n    Navbar,\r\n    Sidebar,\r\n    ManageServices,\r\n    DashboardHome,\r\n    UsersManagement,\r\n  },\r\n  data() {\r\n    return {\r\n      activeSection: \"overview\", // Por defecto se muestra el overview\r\n    };\r\n  },\r\n  methods: {\r\n    setActiveSection(section) {\r\n      this.activeSection = section;\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.wrapper {\r\n  display: flex;\r\n  flex-direction: column;\r\n  min-height: 100vh;\r\n}\r\n.content-wrapper {\r\n  flex: 1;\r\n  margin-top: 60px;    /* Espacio para el Navbar */\r\n  margin-left: 250px;  /* Espacio para el Sidebar */\r\n  padding: 20px;\r\n  transition: margin-left 0.3s ease;\r\n}\r\n.dashboard-title {\r\n  font-size: 24px;\r\n  font-weight: bold;\r\n  color: #345896;\r\n  margin-bottom: 15px;\r\n}\r\n</style>\r\n"],"mappings":"AA2BA,OAAOA,MAAK,MAAO,yBAAyB;AAC5C,OAAOC,OAAM,MAAO,0BAA0B;AAC9C,OAAOC,cAAa,MAAO,kCAAkC;AAC7D,OAAOC,aAAY,MAAO,iCAAiC;AAC3D,OAAOC,eAAc,MAAO,mCAAmC;AAE/D,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,UAAU,EAAE;IACVN,MAAM;IACNC,OAAO;IACPC,cAAc;IACdC,aAAa;IACbC;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,aAAa,EAAE,UAAU,CAAE;IAC7B,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,gBAAgBA,CAACC,OAAO,EAAE;MACxB,IAAI,CAACH,aAAY,GAAIG,OAAO;IAC9B;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}