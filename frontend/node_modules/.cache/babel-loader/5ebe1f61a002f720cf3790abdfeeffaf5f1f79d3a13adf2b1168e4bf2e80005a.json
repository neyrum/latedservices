{"ast":null,"code":"import axios from '@/plugins/axios';\nimport Navbar from '@/components/Navbar.vue';\nimport Sidebar from '@/components/Sidebar.vue';\nimport Footer from '@/components/Footer.vue';\nimport Notification from '@/components/Notification.vue';\nimport ManageServices from '@/views/admin/ManageServices.vue';\nexport default {\n  name: 'Dashboard',\n  components: {\n    Navbar,\n    Sidebar,\n    Footer,\n    Notification,\n    ManageServices\n  },\n  computed: {\n    userData() {\n      return this.$store.getters[\"auth/userData\"] || {};\n    },\n    userRole() {\n      return this.userData.role || 'user';\n    },\n    isSuperAdmin() {\n      return this.userRole === \"superadmin\";\n    },\n    isAdmin() {\n      return this.userRole === \"admin\";\n    },\n    isUser() {\n      return this.userRole === \"user\";\n    }\n  },\n  async created() {\n    if (this.isSuperAdmin || this.isAdmin) {\n      await this.fetchSummary();\n    }\n  },\n  methods: {\n    async fetchSummary() {\n      try {\n        const response = await axios.get('/admin/summary');\n        this.summary = response.data;\n      } catch (err) {\n        this.errorMessage = err.response?.data?.message || 'Failed to load dashboard data.';\n      }\n    },\n    navigateTo(route) {\n      this.$router.push(route);\n    }\n  }\n};","map":{"version":3,"names":["axios","Navbar","Sidebar","Footer","Notification","ManageServices","name","components","computed","userData","$store","getters","userRole","role","isSuperAdmin","isAdmin","isUser","created","fetchSummary","methods","response","get","summary","data","err","errorMessage","message","navigateTo","route","$router","push"],"sources":["/Users/macbookpro/project/LatedServices/frontend/src/views/admin/Dashboard.vue"],"sourcesContent":["<template>\r\n  <div class=\"wrapper\">\r\n    <Navbar />\r\n    <Sidebar />\r\n    <div class=\"content-wrapper\">\r\n      <div class=\"container-fluid mt-4\">\r\n      \r\n        <h2>Dashboard</h2>\r\n    